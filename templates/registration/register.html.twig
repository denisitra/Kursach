{% extends "base.html.twig" %}
{% block title %}Registration{% endblock %}

{% block body %}
    {% include  "header.html.twig"%}

    {{ form_start(registrationForm) }}
    <main>
    <div class="container col-lg-2" style="margin-top: 120px" >


        <h2 class="text-center"><em>{% trans %} Registration {% endtrans %}</em> </h2><br>


        <div class="form-group">
            {{ form_errors(registrationForm.email) }}
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
        </div>


        <div class="form-group">
            {{ form_errors(registrationForm.Password) }}
            {{ form_label(registrationForm.Password) }}
            {{ form_widget(registrationForm.Password, { 'attr': {'class': 'form-control'} }) }}
        </div>


        <div class="form-group">
            {{ form_errors(registrationForm.firstName) }}
            {{ form_label(registrationForm.firstName) }}
            {{ form_widget(registrationForm.firstName, { 'attr': {'class': 'form-control'} }) }}
        </div>


        <div class="form-group">
            {{ form_errors(registrationForm.lastName) }}
            {{ form_label(registrationForm.lastName) }}
            {{ form_widget(registrationForm.lastName, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <button type="submit" style="margin-left: 85px" class="btn btn-primary">{% trans %} Sign up {% endtrans %}</button>


</div>
    {{ form_end(registrationForm) }}
    {% include  "footer.html.twig"%}
    </main>

{% endblock %}