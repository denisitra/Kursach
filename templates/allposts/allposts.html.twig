{% extends 'base.html.twig' %}

{% block title %}All posts{% endblock %}

{% block head_css %}
{% endblock %}
{% block body %}

    {% include "header.html.twig"%}

    {% for post in posts %}
        <div style="margin-left: 6%" class="homepage_container">
            <div class="project project-default">
                <div class="shape">
                    <div class="shape-text">
                        Post
                    </div>
                </div>
                <div>
                    <h3 class="headline">
                        <a href="/post/{{ post.id }}"> {{ post.headline }} </a>
                    </h3>
                    <span class="teaser badge badge-secondary">{{ post.teaser }}</span>
                    <span class="tags badge badge-secondary">{{ post.tags }}</span>
                    <div class="box">
                        <div>
                            <p>
                                {{ post.text }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    <div  class=" navigation">
        {{ knp_pagination_render(posts) }}
    </div>

    {% include "footer.html.twig"%}

{% endblock %}