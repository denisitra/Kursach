{% extends 'base.html.twig' %}

{% block title %}All posts{% endblock %}

{% block head_css %}
{% endblock %}
{% block body %}

    {% include  "header.html.twig"%}
    <main>
    <h1 class="text-center"> All posts </h1><br>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">â„–</th>
            <th scope="col">Headline</th>
            <th scope="col">Teaser</th>
            <th scope="col">Tags</th>
            <th scope="col">Author</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
        <tr>
             <td>{{ post.id }}</td>

            <td><a href="/post/{{ post.id }}"> {{ post.headline }} </a></td>
            <td>{{ post.teaser }}</td>
            <td>{{ post.tags }}</td>
            <td>{{ post.user.firstName }}</td>
        </tr>
       {% endfor %}
        </tbody>
    </table>
    </main>
    {% include  "footer.html.twig"%}


{% endblock %}